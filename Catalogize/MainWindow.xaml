<Window x:Name="MainWindow1" x:Class="Catalogize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="365" Width="871"
        Activated="MainWindowActivated"
        Closed="MainWindowClosed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="FindButton" Content="Найти" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="FindButton_Click" Height="22"/>
        <Button x:Name="MainAddButton" Content="Добавить" HorizontalAlignment="Left" Margin="770,10,0,0" VerticalAlignment="Top" Width="75" Click="MainAddButton_Click" Height="22"/>
        <TextBox x:Name="FindValue" HorizontalAlignment="Left" Height="23" Margin="94,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="FindValue_TextChanged"/>
        <Button x:Name="MainOpenButton" Content="Открыть" HorizontalAlignment="Left" Margin="690,11,0,0" VerticalAlignment="Top" Width="75" Click="MainOpenButton_Click" Height="22"/>
        <DataGrid x:Name="BookBaseDataGrid" Margin="10,38,10,0" VerticalAlignment="Top" Height="279" SelectionChanged="BookBaseDataGrid_SelectionChanged" Focusable="True" IsTextSearchEnabled="True" />
    </Grid>
</Window>
