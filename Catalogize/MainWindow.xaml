<Window x:Name="MainWindow1" x:Class="Catalogize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catalogize" Height="365" Width="871"
        Activated="MainWindowActivated"
        Closed="MainWindowClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="FindButton" Content="Найти" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="75" Click="FindButton_Click" Height="22"/>
        <Button x:Name="MainAddButton" Content="Добавить" Margin="0,36,10,0" VerticalAlignment="Top" Click="MainAddButton_Click" Height="22" HorizontalAlignment="Right" Width="75"/>
        <TextBox x:Name="FindValue" Margin="90,36,645,0" TextWrapping="Wrap" TextChanged="FindValue_TextChanged" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="MainOpenButton" Content="Открыть" Margin="0,36,90,0" Click="MainOpenButton_Click" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Top"/>
        <DataGrid x:Name="BookBaseDataGrid" Margin="10,63,10,10" SelectionChanged="BookBaseDataGrid_SelectionChanged" Focusable="True" IsTextSearchEnabled="True" MaxColumnWidth="250" MinColumnWidth="10" AutoGenerateColumns="True" />
    </Grid>
</Window>
