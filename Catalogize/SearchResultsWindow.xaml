<Window x:Class="Catalogize.SearchResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SearchResultsWindow" Height="300" Width="489" SizeToContent="WidthAndHeight">
    <Grid Focusable="True">
        <DataGrid x:Name="SearchResultDataGrid" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Height="212" Width="453" SelectionChanged="SearchResultDataGrid_SelectionChanged" AllowDrop="True"/>
        <Button x:Name="OpenButton" Content="Открыть" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="OpenButton_Click"/>
        <Button x:Name="RemoveButton" Content="Удалить" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="RemoveButton_Click"/>

    </Grid>
</Window>
